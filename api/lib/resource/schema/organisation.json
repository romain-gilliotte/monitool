{
	"$schema": "http://json-schema.org/schema#",
	"title": "Monitool organisation schema",
	"type": "object",
	"additionalProperties": false,
	"required": [

	],
	"properties": {
		"_id": {
			"type": "string",
			"pattern": "^organisation:[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$"
		},
		"_rev": {
			"type": "string",
			"pattern": "^[0-9]+\\-[0-9a-f]{32}$"
		},

		"name": {
			"type": "string",
			"minLength": 1
		},

		"description": {
			"type": "string",
			"minLength": 1
		},

		"thematics": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "object",
				"additionalProperties": false,
				"required": [

				],
				"properties": {
					"id": {
						"type": "string"
					},
					"name": {
						"type": "string"
					},
					"description": {
						"type": "string"
					},

					"indicators": {
						"type": "array",
						"items": {
							"type": "object",
							"additionalProperties": false,
							"required": [

							],
							"properties": {
								"id": {
									"type": "string"
								},
								"name": {
									"type": "string"
								},
								"description": {
									"type": "string"
								}
							}
						}
					}
				}
			}
		},

		"users": {
			"type": "object",
			"properties": {
				"admins": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"explicitInvites": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"autoInvites": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			}
		}
	}
}
