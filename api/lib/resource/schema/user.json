{
	"$schema": "http://json-schema.org/schema#",
	"title": "Monitool user schema",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"_id",
		"email", "passwordHash",
		"validateEmailTokenHash", "validateEmailSentAt",
		"resetPasswordTokenHash", "resetPasswordEmailSentAt",
		"createdAt"
	],

	"properties": {
		"_id": {
			"type": "string",
			"pattern": "^user:"
		},
		"_rev": {
			"type": "string",
			"pattern": "^[0-9]+\\-[0-9a-f]{32}$"
		},
		"email": {
			"type": "string"
		},
		"passwordHash": {
			"type": "string"
		},
		"validateEmailTokenHash": {
			"oneOf": [
				{"type": "string"},
				{"type": "null"}
			]
		},
		"validateEmailSentAt": {
			"type": "string"
		},

		"resetPasswordTokenHash": {
			"oneOf": [
				{"type": "string"},
				{"type": "null"}
			]
		},
		"resetPasswordEmailSentAt": {
			"oneOf": [
				{"type": "string"},
				{"type": "null"}
			]
		},

		"createdAt": {
			"type": "string"
		},

		"organisations": {
			"type": "array",
			"items": {
				"type": "string"
			}
		}
	}
}


