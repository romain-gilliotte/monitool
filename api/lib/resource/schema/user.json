{
	"$schema": "http://json-schema.org/schema#",
	"title": "Monitool user schema",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"_id",
		"email", "passwordHash",
		"tokens",
		"createdAt"
	],

	"properties": {
		"_id": {
			"type": "string",
			"pattern": "^user:"
		},
		"_rev": {
			"type": "string",
			"pattern": "^[0-9]+\\-[0-9a-f]{32}$"
		},
		"email": {
			"type": "string"
		},
		"passwordHash": {
			"type": "string"
		},
		"createdAt": {
			"type": "string"
		},

		"tokens": {
			"type": "object",
			"additionalProperties": false,
			"required": ["validateEmailTokenHash", "validateEmailSentAt", "resetPasswordTokenHash", "resetPasswordEmailSentAt"],
			"properties": {
				"validateEmailTokenHash": {
					"oneOf": [
						{"type": "string"},
						{"type": "null"}
					]
				},
				"validateEmailSentAt": {
					"type": "string"
				},

				"resetPasswordTokenHash": {
					"oneOf": [
						{"type": "string"},
						{"type": "null"}
					]
				},
				"resetPasswordEmailSentAt": {
					"oneOf": [
						{"type": "string"},
						{"type": "null"}
					]
				}
			}
		}
	}
}


