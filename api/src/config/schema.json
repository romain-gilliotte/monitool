{
	"$schema": "http://json-schema.org/schema#",
	"title": "Monitool configuration file schema",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"debug",
		"port",
		"jwt",
		"couchdb"
	],
	"properties": {
		"debug": {
			"type": "boolean"
		},
		"port": {
			"type": "integer",
			"minimum": 1,
			"maximum": 65536
		},
		"jwt": {
			"type": "object",
			"required": [
				"jwksHost",
				"audience",
				"issuer"
			],
			"properties": {
				"jwksHost": {
					"type": "string"
				},
				"audience": {
					"type": "string"
				},
				"issuer": {
					"type": "string"
				}
			}
		},
		"couchdb": {
			"type": "object",
			"required": [
				"host",
				"port",
				"bucket"
			],
			"properties": {
				"host": {
					"type": "string"
				},
				"port": {
					"type": "integer",
					"minimum": 1,
					"maximum": 65535
				},
				"bucket": {
					"type": "string",
					"minLength": 1
				},
				"username": {
					"type": "string"
				},
				"password": {
					"type": "string"
				}
			}
		}
	}
}